{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "qmiCommon": {
            "type": "object",
            "metadata": {
                "description": "Networking Parameters passed as an object"
            }
        },
        "vmIdentity": {
            "type": "string",
            "metadata": {
                "description": "Takes the output of the VM identity for use in access policies"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "location": "[parameters('qmiCommon').location]",
            "name": "[parameters('qmiCommon').keyVaultName]",
            "properties": {
                "enableSoftDelete": true,
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "family": "A",
                    "name": "standard"

                },
                "accessPolicies": [
                    {
                        "objectId": "[parameters('vmIdentity')]",
                        "tenantId": "[subscription().tenantId]",
                        "permissions": {
                            "keys": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "ManageContacts",
                                "ManageIssuers",
                                "GetIssuers",
                                "ListIssuers",
                                "SetIssuers",
                                "DeleteIssuers"
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "vaultUri": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.KeyVault/vaults/',parameters('qmiCommon').keyVaultName ), '2016-10-01')]"
        }
    }
}